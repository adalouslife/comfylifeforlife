{
  "title": "ComfyUI Worker (Queue-based)",
  "description": "Serverless worker that runs ComfyUI inside the container and processes queued jobs (URL in â†’ URL out).",
  "type": "serverless",
  "category": "image",
  "iconUrl": "https://raw.githubusercontent.com/comfyanonymous/ComfyUI/master/comfyui.png",
  "config": {
    "runsOn": "GPU",
    "containerDiskInGb": 40,
    "presets": [
      {
        "name": "Default",
        "defaults": {
          "COMFY_HOST": "127.0.0.1",
          "COMFY_PORT": "8188",
          "STORAGE_DIR": "/runpod-volume"
        }
      }
    ],
    "env": [
      { "key": "COMFY_HOST", "value": "127.0.0.1" },
      { "key": "COMFY_PORT", "value": "8188" },
      { "key": "STORAGE_DIR", "value": "/runpod-volume" }
    ]
  }
}
